<%- include('../includes/header.ejs') %>
    <link href="/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="/css/detalhes.css" rel="stylesheet">
    <title><%= pageTitle %></title>
</head>
<body>
    <!-- Navigation -->
    <%- include('../includes/header-nav.ejs') %>
    <%- include('../includes/aside-nav.ejs') %>

    <%- include('./confirm-password.ejs', {fun: funcionario, user: user}) %>
    <%- include('./delete-modal.ejs', {fun: funcionario, user: user}) %>

    <section class="main-section">
        <h6><i class="fa fa-users mr-2"></i> <a href="<%= path %>"><%= pathUrl %></a> / detalhes</h6>
        <hr  class="mb-4">

        <%- include('../includes/alert.ejs') %>

        <!-- Tabela -->
        <% if(funcionario) { %>
        <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="#" class="ml-2 btn btn-dark" data-toggle="modal" data-target="#confirmModal">
                <i class="fa fa-pencil"></i>
            </a>
            <a href="#" class="ml-2 btn btn-dark" data-toggle="modal" data-target="#deleteModal">
                <i class="fa fa-trash"></i>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <img src="/img/<%= funcionario.foto %>" alt="user " class="fun-img mb-4">
                    <tr>
                        <td>
                            <h5 class="mb-2"><i class="fa <%= funcionario.sexo === 'Masculino' ? 'fa-male' : 'fa-female' %>"></i> Informação Pessoal:</h5>
                            <p><span class="detail-span">Nome Completo:</span> <%= funcionario.nome %></p>
                            <p><span class="detail-span">Data de Nascimento:</span> <%= dtNasc %></p>
                            <p><span class="detail-span">Idade:</span> <%= idade %></p>
                            <p><span class="detail-span">Sexo:</span> <%= funcionario.sexo %></p>
                            <p><span class="detail-span">Portador do BI nº:</span> <%= funcionario.codBi %></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h5 class="mb-2"><i class="fa fa-map-marker"></i> Endereço:</h5>
                            <p><span class="detail-span">Endereço:</span> <%= funcionario.endereco %></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h5 class="mb-2"><i class="fa fa-suitcase"></i> Informação Profissional:</h5>
                            <p><span class="detail-span">Função:</span> <%= funcao.designacao %></p>
                            <p><span class="detail-span">Salário:</span> <%= funcionario.salario %> kz</p>
                            <p><span class="detail-span">Conta Bancária:</span> <%= funcionario.numConta %></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h5 class="mb-2"><i class="fa fa-phone"></i> Contactos:</h5>
                            <p><span class="detail-span">Tel:</span> <%= funcionario.telefone %></p>
                            <p><span class="detail-span">Email:</span> <%= funcionario.email %></p>
                        </td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
        </div>
        <% } else { %>
            <h1 class="mt-5 text-center text-danger">404</h1>
            <h4 class="text-center">Página Inexistente!</h4>
        <% } %>
    </section>

<%- include('../includes/footer.ejs', {path: path}) %>