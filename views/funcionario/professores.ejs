<%- include('../includes/header.ejs') %>
    <link href="/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <title><%= pageTitle %></title>
</head>
<body>
    <%- include('../includes/header-nav.ejs') %>
    <%- include('../includes/aside-nav.ejs') %>

    <section class="main-section">
        <h6><i class="fa fa-user mr-2"></i> <%= pageTitle %></h6>
        <hr  class="mb-4">

        <!-- Tabela -->
        <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold"><i class="fa fa-user"></i> <%= pageTitle %>:</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Nome</th>
                    <th>Sexo</th>
                    <th>Tel</th>
                    <th>Email</th>
                    <th class="text-center"><i class="fa fa-info-circle"></i></th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Nome</th>
                    <th>Sexo</th>
                    <th>Tel</th>
                    <th>Email</th>
                    <th class="text-center"><i class="fa fa-info-circle"></i></th>
                </tr>
                </tfoot>
                <tbody>
                    <% if(funcionarios.length > 0) { %>
                       <% for (let fun of funcionarios) { %>
                        <tr class="dt-text">
                            <td><%= fun.nome %></td>
                            <td><%= fun.sexo %></td>
                            <td><%= fun.telefone %></td>
                            <td><%= fun.email %></td>
                            <td><a href="<%= loggedFun.id === fun.id ? '/perfil' : '/professores/detalhes/' + fun.id %>"><i class="fa fa-plus-circle"></i> Detalhes...</a></td>
                        </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center"><h5>Sem Professores Cadastrados!</h5></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            </div>
        </div>
        </div>
    </section>  

<%- include('../includes/footer.ejs') %>