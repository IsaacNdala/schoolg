<div class="modal fade" id="addDisciplina" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <form action="/disciplinas/add" method="POST" class="modal-content">
            <div class="modal-header">
                <h7 class="modal-title font-weight-bold"><i class="fa fa-plus-circle"></i> Adicionar Disciplina</h7>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        <label for="designacao">Disciplina </label>
                        <input type="text" class="form-control" name="designacao" id="designacao" placeholder="disciplina" maxlength="120" required>                    
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="reset" class="btn btn-danger"><i class="fa fa-trash-o"></i> Limpar</button>
                <button type="submit" id="enviar" class="btn btn-info"><i class="fa fa-plus-circle"></i> Adicionar</button>
            </div>
        </form>
    </div>
</div>